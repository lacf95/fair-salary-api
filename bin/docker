#!/usr/bin/env bash

cmd="${1}"

case "${cmd}" in
  "build")
    docker build -t fair_salary:latest .
    ;;

  "run")
    docker run --rm --interactive --tty --publish 3001:3001 --volume $(pwd):/apps/fair-salary fair_salary:latest "${@:2}"
    ;;

  *)
    echo "Command \"${cmd}\" not found"
    ;;
esac
